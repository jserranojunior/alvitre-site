---
export interface Props {
  title: string;
  url: string;
  metaImage: string;
}

const { title, url } = Astro.props;
---

<!DOCTYPE html>
<html lang="pt-br" class="scroll-smooth">
  <head>
    <!--     <title>Alvitre - Desenvolvimento de Sistemas</title>
 -->
    <title>Alvitre - {title}</title>

    <meta name="title" content="Alvitre - {title}" />
    <meta
      name="description"
      content="Desenvolvimento sistemas e sites. Atuando no mercado desde 2015.
  Buscando inovação e entregando produtos personalizados para cada cliente. Venha conhecer nosso portfólio"
    />
    <meta
      name="keywords"
      content="Desenvolvimento, site, sistemas, aplicativos, aplicações, inovação, personalizado, web, design, "
    />
    <meta name="robots" content="/robots.txt" />
    <meta name="revisit-after" content="1 day" />
    <meta name="language" content="Portuguese" />
    <meta name="generator" content="N/A" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:url" content="https://alvitre.com.br/{url}" />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="Alvitre - {title}" />
    <meta
      property="og:description"
      content="Desenvolvimento sistemas e sites. Atuando no mercado desde 2015.
  Buscando inovação e entregando produtos personalizados para cada cliente. Venha conhecer nosso portfólio"
    />
    <meta property="og:image" content="{metaImage}" />

    <link rel="shortcut icon" href="/static/logo/favicon/alvitre.ico" />
    <link
      rel="apple-touch-icon"
      href="/static/logo/alvitre-icon-iphone-60x60.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="60x60"
      href="/static/logo/alvitre-icon-ipad-76x76.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="114x114"
      href="/static/logo/alvitre-icon-iphone-retina-120x120.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="144x144"
      href="/static/logo/alvitre-icon-ipad-retina-152x152.png"
    />
    <link rel="manifest" href="../../manifest.json" />
    <meta name="theme-color" content="#2196F3" />
  </head>

  <body
    class="bg-gray-900 text-gray-100 px-0 xs:px-0 sm:px-0 md:px-0 lg:px-0 xl:px-20 2xl:px-60 3xl:px-96"
  >
    <section id="header">
      <header>
        <div
          class="flex flex-wrap sm:justify-center md:justify-between px-4 header mx-8"
        >
          <nav class="navbar">
            <div class="navbar-start">
              <div class="dropdown">
                <label tabindex="0" class="btn btn-ghost lg:hidden">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M4 6h16M4 12h8m-8 6h16"></path>
                  </svg>
                </label>
                <ul
                  tabindex="0"
                  class="menu menu-compact dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52"
                >
                  <li><a href="/#header"> Inicio</a></li>

                  <li><a href="/#sistemas"> Sistemas</a></li>
                  <li><a href="/#servicos"> Serviços</a></li>
                  <li>
                    <a href="/#tecnologias"> Tecnologias</a>
                  </li>
                  <li>
                    <a href="https://alvitre.com.br#desenvolvedor">
                      Desenvolvedor
                    </a>
                  </li>

                  <li><a href="/#portfolio"> Portfólio</a></li>
                </ul>
              </div>
              <a class="btn btn-ghost normal-case text-xl">
                <img
                  width="50"
                  class="mr-4"
                  src="/static/logo/webp/alvitre.webp"
                  alt="Logo da Alvitre!"
                />
                Alvitre
              </a>
            </div>
            <div class="navbar-center hidden lg:flex">
              <ul class="menu menu-horizontal px-1">
                <li><a href="/#header"> Inicio</a></li>

                <li><a href="/#sistemas"> Sistemas</a></li>
                <li><a href="/#servicos"> Serviços</a></li>
                <li>
                  <a href="/#tecnologias"> Tecnologias</a>
                </li>
                <li>
                  <a href="https://alvitre.com.br#desenvolvedor">
                    Desenvolvedor
                  </a>
                </li>

                <li><a href="/#portfolio"> Portfólio</a></li>
              </ul>
            </div>
            <div class="navbar-end">
              <a
                id="whatsapp"
                href="https://web.whatsapp.com/send?phone=5511946439695"
                target="__blank"
                class="btn btn-primary">Contato</a
              >
            </div>
          </nav>
          <div
            class="w-full sm:w-full md:w-auto lg:auto text-center md:text-left"
          >
          </div>
        </div>
      </header>
    </section>
    <slot />
  </body>

  <script src="../assets/scripts//main.ts"></script>
</html>
