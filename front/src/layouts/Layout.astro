---
export interface Props {
  title: string;
  url: string;
  metaImage: string;
}

const { title, url, metaIMage } = Astro.props;
---

<!DOCTYPE html>
<html lang="pt-br" class="scroll-smooth">
  <head>
    <!--     <title>Alvitre - Desenvolvimento de Sistemas</title>
 -->
    <title>Alvitre - {title}</title>

    <meta name="title" content="Alvitre - {title}" />
    <meta
      name="description"
      content="Desenvolvimento sistemas e sites. Atuando no mercado desde 2015.
  Buscando inovação e entregando produtos personalizados para cada cliente. Venha conhecer nosso portfólio"
    />
    <meta
      name="keywords"
      content="Desenvolvimento, site, sistemas, aplicativos, aplicações, inovação, personalizado, web, design, "
    />
    <meta name="robots" content="/robots.txt" />
    <meta name="revisit-after" content="1 day" />
    <meta name="language" content="Portuguese" />
    <meta name="generator" content="N/A" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:url" content="https://alvitre.com.br/{url}" />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="Alvitre - {title}" />
    <meta
      property="og:description"
      content="Desenvolvimento sistemas e sites. Atuando no mercado desde 2015.
  Buscando inovação e entregando produtos personalizados para cada cliente. Venha conhecer nosso portfólio"
    />
    <meta property="og:image" content="{metaImage}" />

    <link rel="shortcut icon" href="/static/logo/favicon/alvitre.ico" />
    <link
      rel="apple-touch-icon"
      href="/static/logo/alvitre-icon-iphone-60x60.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="60x60"
      href="/static/logo/alvitre-icon-ipad-76x76.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="114x114"
      href="/static/logo/alvitre-icon-iphone-retina-120x120.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="144x144"
      href="/static/logo/alvitre-icon-ipad-retina-152x152.png"
    />
    <link rel="manifest" href="../../manifest.json" />
    <meta name="theme-color" content="#2196F3" />
  </head>

  <body class="bg-gray-900 text-gray-100">
    <section id="header">
      <header>
        <div
          class="flex flex-wrap sm:justify-center md:justify-between mb-2 px-4 header mx-8"
        >
          <div
            class="w-full sm:w-full md:w-auto lg:auto text-center md:text-left"
          >
            <nav class="align-middle flex">
              <div class="block lg:hidden mt-1">
                <button
                  id="togleMenu"
                  class="flex items-center px-3 py-4 border rounded text-gray-500 border-gray-600 hover:text-gray-800 hover:border-white active:border-0"
                >
                  <svg
                    class="fill-current h-4 w-4"
                    viewBox="0 0 20 20"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <title>Menu</title>
                    <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"
                    ></path>
                  </svg>
                </button>
              </div>
              <div id="main-menu" class="mt-2 hidden lg:block">
                <a name="inicio" href="/#header" class="mr-2"> Inicio</a>

                <a name="sistemas" href="/#sistemas" class="mx-4 mt-4">
                  Sistemas
                </a>
                <a name="servicos" href="/#servicos" class="mx-4 mt-4">
                  Serviços
                </a>
                <a name="tecnologias" href="/#tecnologias" class="mx-4 mt-4">
                  Tecnologias
                </a>
                <a
                  name="desenvolvedor"
                  href="https://alvitre.com.br#desenvolvedor"
                  class="mx-4 mt-4"
                >
                  Desenvolvedor
                </a>

                <a name="portfolio" href="/#portfolio" class="mx-4 mt-4">
                  Portfólio
                </a>

                <a
                  id="whatsapp"
                  href="https://web.whatsapp.com/send?phone=5511946439695"
                  class="mx-4 mt-4 whatsapp"
                >
                  <span class="icon is large text-green-600">
                    <i class="fab fa-1x fa-whatsapp"></i>
                  </span>
                  Contato
                </a>
              </div>
            </nav>
          </div>
        </div>
      </header>
    </section>
    <slot />
  </body>

  <script src="../assets/scripts//main.ts"></script>
  <script
    src="https://code.iconify.design/iconify-icon/1.0.2/iconify-icon.min.js"
  ></script>
  <!-- Google tag (gtag.js) -->
