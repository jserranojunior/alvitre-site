RewriteEngine On
RewriteRule ^([0-9A-Za-z-_]+)$ /$1.html
RewriteRule ^([^\.]+)$ $1.html [NC,L]
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC]
RewriteRule ^ %1 [R,NC]

<IfModule mod_headers.c>
      <FilesMatch "\.(ico|gif|jpg|jpeg|png|webp)$">
            Header set Cache-Control "max-age=31536000"
      </FilesMatch>
      <FilesMatch "\.(css|js)$">
            Header set Cache-Control "max-age=31536000"
      </FilesMatch>
</IfModule>